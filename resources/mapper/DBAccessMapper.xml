<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.DBAccessMapper">
    
    <select id="find" resultType="dto.DefaultResultDto">
        select ${columns}
        from ${tableName}
        where id = #{id}
    </select>
    
    <select id="findAll" parameterType="java.lang.String" resultType="dto.DefaultResultDto">
        select ${columns}
        from ${tableName}
    </select>
    
    <select id="count" parameterType="java.lang.String" resultType="long">
        select count(*)
        from ${tableName}
    </select>
    
</mapper>